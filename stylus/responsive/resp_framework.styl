//== Main Block
.main
  @media screen and (max-width : $screen-sm-max)
    width 100%

//== common .wrap block
.wrap
  @media screen and (max-width : $screen-sm-max)
    width 100%
    margin-bottom 20px
    clear both

    //== common left and relative block
    .left
      float none
      width 100%
      &>div
        float left
        width 49%

    .left_l
      width 100%
      float none
      &>div
        padding-left 0
        margin-left 4%
        margin-right 1%
        width 95%


    //== common right and relative block
    .right
      float none
      width 100%

    .right_r
      float none
      width 100%