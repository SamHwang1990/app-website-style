//== common left and right
.wrap
  @media screen and (max-width : $screen-sm-max)
    .left_l
      width 100%
      float none
      &>div
        padding-left 0
        margin-left 4%
        margin-right 1%
        width 95%
      .shuxin table
        width 100%
        td
          height auto
          padding-bottom 5px
        .shux01
          padding-top 0px
          padding-bottom 5px
          width 100%
          height auto
          li
            margin-top 5px
      .lie .lie_a
        width 100%
        padding-bottom 30px
        .lie01
          display block
          width auto
          border 0px
          margin-bottom 16px
          text-align left
          img
            border #dbdbdb 1px solid

          &+td
            display block
            width auto

        .syuan01
          padding-left 0
          width 100%

        .syuan04
          width 100%
          img
            display block
            width 100%

      .lie .pagebox
        width 100%
        a
          display none
          height 30px
          line-height 30px
          padding 0 12px
          &:last-of-type
            display inline-block
          &:first-of-type
            display inline-block


  @media screen and (max-width : $screen-xs-max)
    .left_l
      .yuansou
        &>div
          float none
          margin-bottom 10px
      .lie .lie_a .syuan05
        display block
        padding 10px 0 5px 0
        td
          display block
          float left

.wrap
  @media screen and (max-width : $screen-sm-max)
    .right_r
      float none
      width 100%
      .shubiao
        width 100%
        margin-top 20px
        .shu_b
          display none
        .shu_r
          float none
          width 100%
          ul
            margin 0 auto
            width 90%
            li
              float left
              width 47%
